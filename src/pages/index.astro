---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts');
---

<BaseLayout title = "首页" showHomeLink = {false}>
  <h1>我的博客</h1>

  <ul>
    {posts.map(post => (
      <li>
        <a href={`/posts/${post.slug}`}>
          {post.data.title}
        </a>
      </li>
    ))}
  </ul>
</BaseLayout>